<h3>Posts</h3>
<ul class="list-group">
	{{#each post in model}}
		<li class="list-group-item">
			<button type="button" class="close btn" {{action 'delete' post}}>&times;</button>
			<h4>{{~#link-to 'posts.show' this}}{{post.title}}{{~/link-to}}</h4>
			<br>
			<p>{{post.body}}</p>
		</li>
	{{/each}}
</ul>